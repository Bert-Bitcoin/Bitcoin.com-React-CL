{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@bitcoin/components/*": ["src/components/*"],
      "@bitcoin/styles/*": ["src/styles/*"],
      "@bitcoin/tokens": ["src/tokens/index"],
      "@bitcoin/utils/*": ["src/utils/*"]
    },
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src", "scripts", ".storybook", "tailwind.config.ts", "tsup.config.ts"],
  "exclude": ["dist", "node_modules"]
}


